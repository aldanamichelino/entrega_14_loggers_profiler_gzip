<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <title>Carga un producto</title>
    </head>
    <body>
        {{#if username}}
        <div class="d-flex w-100 justify-content-around align-items-center jumbotron">
            <h3 class="bg-primary text-white p-2">Bienvenidx, {{username}}</h3>
            <button class="bg-danger text-white" onclick="return logout()">Desloguearme</button>
        </div>
        {{/if}}
        
        <div class="d-flex flex-column w-100 justify-content-center align-items-center jumbotron">
            <h3>Ingrese productos</h3>
            <br>
            <form action="/productos" method="post" id="addProductForm" class="w-75"> 
                <div class="d-flex flex-column">
                    <label for="name">Nombre</label>
                    <input type="text" name="name" id="name">
                </div>
                <br>
                <div class="d-flex flex-column">
                    <label for="price">Precio</label>
                    <input type="text" name="price" id="price">
                </div>
                <br>
                <div class="d-flex flex-column">
                    <label for="imageUrl">Foto URL</label>
                    <input type="text" name="imageUrl" id="imageUrl">
                </div>
                <br>
                <div>
                    <button type="submit" class="bg-success">Enviar</button>
                </div>
            </form>

            <br>

            <div id="productsInfo" class="w-75"></div>
        </div>

        <div class="d-flex flex-column w-100 justify-content-center align-items-center jumbotron">
            <h3>Centro de mensajes</h3>
            <br>
            <p id="compressionPercentage"></p>

            <div class="w-75">
                <input type="text" class="w-100" name="userEmail" id="userEmail" placeholder="Correo electrónico">
            </div>
            <br>
            <div class="w-75">
                <input type="text" class="w-100" name="userName" id="userName" placeholder="Nombre">
            </div>
            <br>
            <div class="w-75">
                <input type="text" class="w-100" name="userLastName" id="userLastName" placeholder="Apellido">
            </div>
            <br>
            <div class="w-75">
                <input type="text" class="w-100" name="userAge" id="userAge" placeholder="Edad">
            </div>
            <br>
            <div class="w-75">
                <input type="text" class="w-100" name="userNickname" id="userNickname" placeholder="Alias">
            </div>
            <br>
            <div class="w-75">
                <input type="text" class="w-100" name="userAvatar" id="userAvatar" placeholder="Avatar">
            </div>
            <br>

            <div id="chat-list" class="w-75 mb-4"></div>

            <form class="w-75" id="sendMessage">
                <div>
                    <input type="text" name="message" id="userMessage" placeholder="Ingresá un mensaje" class="w-100">
                </div>
                <br>
                <div>
                    <button type="submit" class="bg-success" id="send-message-button" disabled>Enviar</button>
                </div>
            </form>
        </div>
        
        <script src="/socket.io/socket.io.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
        <script src="./main.js"></script>
    </body>

    <script>
        function logout () {
            window.location = '/logout';
        };

    </script>
</html>